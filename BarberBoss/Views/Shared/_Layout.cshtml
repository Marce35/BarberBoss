@{
    ViewBag.Orange = "#FFC107";
}


<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" crossorigin="anonymous">


</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm position-sticky top-0" style="background-color: @ViewBag.Orange; z-index: 10">
        <div class="container">
            @Html.ActionLink("BarberBoss", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <dixv class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                    @*<li>@Html.ActionLink("Barbers", "Index", "Barbers", new { area = "" }, new { @class = "nav-link" })</li>*@

                    @if (User.IsInRole(BarberBoss.Models.Roles.Client) || !User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Services", "Services", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Book Appointment", "Calendar", "Appointments", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("My Appointments", "ClientAppointmentsList", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    @if (User.IsInRole(BarberBoss.Models.Roles.Barber))
                    {
                        //TODO Barber Details where he can add or remove a service he offers
                        <li>@Html.ActionLink("MyServices", "OfferedServices", "Barbers", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("MyAppointments", "listBarberAppointments", "Barbers", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("MyProfile", "barberProfile", "Barbers", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    @if (User.IsInRole(BarberBoss.Models.Roles.Admin))
                    {
                        <li>@Html.ActionLink("Appointments", "Index", "Appointments", new { area = "" }, new { @class = "nav-link" })</li>


                        <li>@Html.ActionLink("Barbers", "Index", "Barbers", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Services", "Index", "ServiceOffers", new { area = "" }, new { @class = "nav-link" })</li>

                    }







                </ul>
                @Html.Partial("_LoginPartial")
            </dixv>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BarberBoss</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
