@model IEnumerable<BarberBoss.Models.Appointment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="appTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Barber.Name)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Client.Name)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTimeString)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookTimeString)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBooked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceId)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.EndTimeString)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>



        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Barber.Name)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Client.Name)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTimeString)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookTimeString)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBooked)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceId)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.EndTimeString)*@
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>



@section Scripts{

    <script>
        $(document).ready(function () {
            $("#appTable").DataTable();
        })
    </script>

}

